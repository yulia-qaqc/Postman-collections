var template = `
    <table>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>description</th>
        </tr>

        {{#each response}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{description}}</td>
            </tr>
        {{/each}}

    </table>
`;

pm.visualizer.set(template, {
    response: pm.response.json()
});
